# game

GET /get controllers.Receiver.getJson()
POST /bet/:x controllers.Receiver.bet(x: Int)
POST /allIn controllers.Receiver.allIn()
POST /fold controllers.Receiver.fold()
POST /call controllers.Receiver.call()
POST /check controllers.Receiver.check()
POST /restartGame controllers.Receiver.restartGame()
POST /leave controllers.Receiver.leave()

# lobby

GET /join controllers.Receiver.join()

POST /newGame controllers.Receiver.newGame()

# Websocket

GET /websocket controllers.Receiver.socket()

# Map static resources from the /public folder to the /assets URL path

GET /assets/*file controllers.Assets.versioned(path="/public", file: Asset)
